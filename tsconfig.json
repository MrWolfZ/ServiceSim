{
  "compilerOptions": {
    "baseUrl": "./",
    "moduleResolution": "node",
    "target": "esnext",
    "module": "commonjs",
    "jsx": "preserve",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "strict": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ]
}
