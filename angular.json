{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "ServiceSim": {
      "root": "",
      "sourceRoot": "src/ui",
      "projectType": "application",
      "prefix": "sim",
      "schematics": {},
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/ui",
            "index": "src/ui/index.html",
            "main": "src/ui/main.ts",
            "polyfills": "src/ui/polyfills.ts",
            "tsConfig": "tsconfig.ui.app.json",
            "assets": [
              "src/ui/favicon.ico",
              "src/ui/assets"
            ],
            "styles": [
              "src/ui/styles.scss"
            ],
            "stylePreprocessorOptions": {
              "includePaths": [
                "src/ui/styles"
              ]
            },
            "scripts": []
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/ui/environments/environment.ts",
                  "with": "src/ui/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "ServiceSim:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "ServiceSim:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "ServiceSim:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/ui/test.ts",
            "polyfills": "src/ui/polyfills.ts",
            "tsConfig": "tsconfig.ui.spec.json",
            "karmaConfig": "karma.conf.js",
            "styles": [
              "src/ui/styles.css"
            ],
            "stylePreprocessorOptions": {
              "includePaths": [
                "src/ui/styles"
              ]
            },
            "scripts": [],
            "assets": [
              "src/ui/favicon.ico",
              "src/ui/assets"
            ]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "tsconfig.ui.app.json",
              "tsconfig.ui.spec.json"
            ],
            "exclude": [
              "**/node_modules/**",
              "**/schematics/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "ServiceSim",
  "schematics": {
    "@schematics/angular:component": {
      "styleext": "scss"
    }
  }
}
