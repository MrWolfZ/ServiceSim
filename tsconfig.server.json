{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "paths": {},
    "lib": [
      "esnext"
    ]
  },
  "files": [
    "./src/server.ts",
  ],
  "include": [
    "types/**/*",
    "src/application/**/commands/*.ts",
    "src/application/**/queries/*.ts"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ]
}
