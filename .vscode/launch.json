{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach by Process ID",
      "processId": "${command:PickProcess}",
      "protocol": "inspector"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "vuejs: chrome",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}/src/ui-vue",
      "breakOnLoad": true,
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///src/ui-vue/*": "${webRoot}/*",
        "webpack:///./src/ui-vue/*": "${webRoot}/*"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Generate Test Page",
      "program": "${workspaceRoot}/node_modules/@angular-devkit/schematics-cli/bin/schematics.js",
      "args": [
        ".:page",
        "--dry-run",
        "false",
        "--styleext",
        "scss",
        "--name",
        "test",
        "--module",
        "test"
      ]
    }
  ]
}
