import { HttpClient } from '@angular/common/http';
import { Injectable } from '@angular/core';
import { Actions, Effect, ofType } from '@ngrx/effects';
import { Action } from '@ngrx/store';
import { Observable } from 'rxjs';
import { flatMap } from 'rxjs/operators';

import { addAskMockResponse, ask } from 'app/infrastructure';

import { <%= initializationAction(name) %>, <%= loadAction(name) %> } from './<%= actionsFileNoExt(name) %>';
import { <%= askKindConstant(name) %> } from './<%= dtoFileNoExt(name) %>';

addAskMockResponse(<%= askKindConstant(name) %>, {

});

@Injectable()
export class <%= effects(name) %> {

  @Effect()
  loadPageData$: Observable<Action> = this.actions$.pipe(
    ofType(<%= loadAction(name) %>.TYPE),
    flatMap(() =>
      ask(
        this.http,
        <%= askKindConstant(name) %>,
        dto => [
          new <%= initializationAction(name) %>(dto),
        ],
      )
    ),
  );

  constructor(private actions$: Actions, private http: HttpClient) { }
}
